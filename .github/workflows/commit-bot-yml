name: Auto Commit Bot

on:
  schedule:
    - cron: "0 */5 * * *"  # Jalankan setiap 5 jam
  workflow_dispatch:  # Bisa dijalankan manual

jobs:
  auto-commit:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          persist-credentials: false  # Jangan gunakan kredensial default

      - name: Setup Git
        run: |
          git config --global user.name "rexzea-bot"
          git config --global user.email "178272406+rexzea@users.noreply.github.com"

      - name: Pull perubahan terbaru (biar tidak konflik)
        run: |
          git pull origin main --rebase || echo "Tidak ada perubahan di remote"

      - name: Buat perubahan kecil (biar bisa commit)
        run: |
          echo "Terakhir update: $(date)" > update.log
          git add update.log
          git commit -m "Auto update: $(date)" || echo "Tidak ada perubahan untuk commit"

      - name: Push perubahan ke repo (pakai --force kalau perlu)
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: |
          git push https://x-access-token:${{ secrets.GITHUB_TOKEN }}@github.com/rexzea/Simple-Hand-Tracking.git main || (git pull origin main --rebase && git push --force)
