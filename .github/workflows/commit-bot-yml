name: Auto Commit Bot

on:
  schedule:
    - cron: "0 */5 * * *"  # Jalankan setiap 5 jam
  workflow_dispatch:  # Bisa dijalankan manual

jobs:
  auto-commit:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          persist-credentials: false  # Jangan gunakan kredensial default
          fetch-depth: 0  # Pastikan mengambil seluruh riwayat commit

      - name: Setup Git
        run: |
          git config --global user.name "rexzea-bot"
          git config --global user.email "178272406+rexzea@users.noreply.github.com"

      - name: Paksa Sinkronisasi dengan Remote
        run: |
          git fetch --all
          git checkout main
          git reset --hard origin/main  # Paksa branch lokal agar sama persis dengan remote
          git pull origin main --rebase  # Tarik perubahan terbaru dengan rebase

      - name: Buat perubahan kecil (biar bisa commit)
        run: |
          echo "Terakhir update: $(date)" > update.log
          git add update.log
          git commit -m "Auto update: $(date)" || echo "Tidak ada perubahan untuk commit"

      - name: Push perubahan ke repo
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: |
          git push origin main --force
